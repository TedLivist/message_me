<h2 class="ui center aligned medium icon header">
  <i class="circular teal inverted location arrow icon"></i>
  Let's Chat
</h2>


<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui chatbox fluid raised card">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter your message">
              <i class="bordered inverted teal icon edit"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui chatbox fluid raised card">
      <div class="content">
        <div class="ui inverted vertical small menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>